{
  "manifest_version": 2,

  "name": "Quick Phrase",
  "description": "Quickly copy frequently used words and phrases to the clipboard.",
  "version": "0.0.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": ["tabs", "clipboardWrite", "clipboardRead"],

  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  }
}
